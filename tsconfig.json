{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": false, // Cambiado de true a false para desactivar reglas estrictas
    "noImplicitThis": false, // Añadido para permitir 'this' implícitamente como 'any'
    "noUnusedLocals": false, // Cambiado de true a false para permitir variables no usadas
    "noUnusedParameters": false, // Cambiado de true a false para permitir parámetros no usados
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Añadido para compatibilidad con Vite */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
